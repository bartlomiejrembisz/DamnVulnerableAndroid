<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/challenge_3_button"
        android:layout_width="186dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#03A9F4"
        android:text="Vulnerable Service"
        app:layout_constraintEnd_toEndOf="@+id/challenge_2_button"
        app:layout_constraintStart_toStartOf="@+id/challenge_2_button"
        app:layout_constraintTop_toBottomOf="@+id/challenge_2_button" />

    <Button
        android:id="@+id/challenge_4_button"
        android:layout_width="186dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#03A9F4"
        android:text="Broadcast Receiver"
        app:layout_constraintEnd_toEndOf="@+id/challenge_3_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/challenge_3_button"
        app:layout_constraintTop_toBottomOf="@+id/challenge_3_button" />

    <Button
        android:id="@+id/challenge_5_button"
        android:layout_width="186dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#03A9F4"
        android:text="Memory Dump"
        app:layout_constraintEnd_toEndOf="@+id/challenge_4_button"
        app:layout_constraintStart_toStartOf="@+id/challenge_4_button"
        app:layout_constraintTop_toBottomOf="@+id/challenge_4_button" />

    <Button
        android:id="@+id/reset_challenges_button"
        android:layout_width="65dp"
        android:layout_height="35dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#025B83"
        android:text="Reset"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/header" />

    <Button
        android:id="@+id/challenge_1_button"
        android:layout_width="186dp"
        android:layout_height="60dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="80dp"
        android:backgroundTint="#03A9F4"
        android:text="Arbitrary Code Execution"
        app:layout_constraintEnd_toEndOf="@+id/header"
        app:layout_constraintStart_toStartOf="@+id/header"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <Button
        android:id="@+id/challenge_2_button"
        android:layout_width="186dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#03A9F4"
        android:text="Unprotected Activity"
        app:layout_constraintEnd_toEndOf="@+id/challenge_1_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/challenge_1_button"
        app:layout_constraintTop_toBottomOf="@+id/challenge_1_button" />

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:text="Damn Vulnerable Android"
        android:textColor="#000000"
        android:textSize="28sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:text="Bartlomiej Rembisz\n943219\nSwansea University"
        android:textAlignment="viewEnd"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>